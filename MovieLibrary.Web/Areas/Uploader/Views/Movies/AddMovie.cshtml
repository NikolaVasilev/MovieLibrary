@model AddMovieViewModel
@{
    ViewData["Title"] = "Add Movie";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row" id="main">
            <div class="col-sm-10 col-md-10 well col-sm-offset-1 col-md-offset-1" id="content" style="text-align: center">
                <form method="post" enctype="multipart/form-data">
                    <h1>@ViewData["Title"]</h1>
                    
                  
                    <div asp-validation-summary="All" class="text-danger"></div>
                   
                    <div class="col-lg-6 col-lg-offset-3">
                        <hr style="border-top: solid 1px darkgrey"/>
                            <div class="col-lg-8" style="padding: 0 10px 0 0; margin: 0 0 15px 0">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" id="title" class="form-control" />
                                <span asp-validation-for="Title"  class="text-danger"></span>
                            </div>                   
                            <div class="col-lg-4" style="padding: 0 0 0 10px; margin: 0 0 15px 0">
                                <label asp-for="Year"></label>
                                <input asp-for="Year" id="year" class="form-control" />
                                <span asp-validation-for="Year" class="text-danger"></span>
                            </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <p id="display-resources">Plese click button for autofill form!</p>
                            </div>
                            <a href="#" class="btn btn-primary" id="retrieve-resources">Get Info</a>
                        </div>
                        
                        <hr style="border-top: solid 1px darkgrey" />
                        <div class="form-group">
                            <label asp-for="Duration"></label>
                            <input asp-for="Duration" id="duration" class="form-control" />
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Plot"></label>
                            <textarea asp-for="Plot" id="plot" class="form-control" ></textarea>
                            <span asp-validation-for="Plot" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TrailerUrl"></label>
                            <input asp-for="TrailerUrl" class="form-control" />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl"></label>
                            <input asp-for="ImageUrl" id="poster"class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ParrentControl">Parrent Control</label>
                            <input asp-for="ParrentControl" class="form-control" />
                            <span asp-validation-for="ParrentControl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReleaseDate">Release Date</label>
                            <input asp-for="ReleaseDate" id="release-date" class="form-control" />
                            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Actiors"></label>
                            <input asp-for="Actiors" id="actors" placeholder="Example: John Doe, Ivan Ivanov" class="form-control" />
                            <span asp-validation-for="Actiors" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Writers"></label>
                            <input asp-for="Writers" id="writer" placeholder="Example: John Doe, Ivan Ivanov" class="form-control" />
                            <span asp-validation-for="Writers" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Director"></label>
                            <input asp-for="Director" id="director" placeholder="Example: John Doe, Ivan Ivanov" class="form-control" />
                            <span asp-validation-for="Director" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SelectedCategories">Categories</label>
                            <select asp-for="SelectedCategories" id="categories" asp-items="@Model.Categories" multiple class="form-control"></select>
                            <small>*Hold "Ctrl" to select few categories.</small>
                        </div>
                        <button type="submit" class="btn btn-default">Add Movie</button>
                    </div>


                </form>
            </div>


        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
