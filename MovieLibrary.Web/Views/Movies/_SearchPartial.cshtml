@model ListMoviesViewModel

<form asp-action="SearchMovies">
    <div class="row" style="margin: 0 15px">
        <div class="col-md-4"style="padding: 0">
            <input asp-for="SearchTerm" class="form-control" placeholder="Search..." />
        </div>

        <div class="col-md-2">
            <input type="submit" class="btn btn-default text-center" value="Search" />
        </div>
    </div>
    <div class="container-fluid well " id="content" style="margin: 20px 10px 0 15px">
        @foreach (var genre in Model.Genres)
        {
        <div class="col-lg-3">
           
            <input type="checkbox" name="SecectedGenres" id="genre" value="@genre.Id" @(Model.SelectedGenresIds.Contains(genre.Id) ? "checked" : "")/>
            <label for="genre">@genre.Name</label>
        </div>
        }
    </div>
</form>